#!/bin/bash
#
# Runner for test. Now uses Node.js
#

if [ ! -z "${RUNNER_DEBUG}" ] ; then
    set -x
fi

DIR=`cd $(dirname ${BASH_SOURCE[0]}); pwd;`
# GAIA_DIR will be used in the tests from env.
GAIA_DIR=`cd $DIR/../../../; pwd;`
export GAIA_DIR
NODEJS=`which node`
# use $DEBUG to specify "debug" to Node.js

if [ -z "${VERBOSE}" ]
then
  $NODEJS $DEBUG $DIR/../xpc.js $@ | grep -v -e '^TCPSocket: ' -e '^ERROR: '
else
  $NODEJS $DEBUG $DIR/../xpc.js $@
fi
